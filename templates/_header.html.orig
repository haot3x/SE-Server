<script>
    
    if('{{active_nav}}' != '')
    {
      $('.navbar-nav li').each(function(i,dom){
      if(this.id == '{{active_nav}}')
        $(this).addClass('active');
      });
    }
    

    $('.navbar-nav li:not(.dropdown)').click(function(event){
      $('.navbar-nav li').each(function(i,dom){
        $(dom).removeClass('active')
      });
      $(this).addClass('active');
    });

</script>


